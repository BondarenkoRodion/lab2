class WorkingWithFiles:
    def __init__(self, filename):
        self.filename = filename

    def characters(self):
        length = 0
        file = open(self.filename, 'r')
        for line in file:
            for character in line:
                length += 1
        file.close()
        return length

    def words(self):
        length = 0
        file = open(self.filename, 'r')
        for line in file:
            previous_alpha = 1
            for character in line:
                if not character.isalpha():
                    if previous_alpha == 1:
                        previous_alpha = 0
                        length += 1
                else:
                    previous_alpha = 1
        file.close()
        return length

    def sentences(self):
        length = 0
        file = open(self.filename, 'r')
        previous_punctuation = 1
        for line in file:
            for character in line:
                if character not in '.!?':
                    if previous_punctuation == 1:
                        previous_punctuation = 0
                        length += 1
                else:
                    previous_punctuation = 1
        file.close()
        return length

